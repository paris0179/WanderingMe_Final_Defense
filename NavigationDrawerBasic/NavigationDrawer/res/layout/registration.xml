<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Teal"
    android:alpha="0.80"
    android:id="@+id/linearLayout1"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:weightSum="1">



    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="45dp"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:id="@+id/editText"
        android:hint="Firstname"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Middlename"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:textColorHint="@color/white"
        android:ems="10"
        android:id="@+id/editText13"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:textColorHint="@color/white"
        android:hint="Lastname"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="date"
        android:hint="Birthday"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:textColorHint="@color/white"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_weight="0.04"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Gender"
            android:gravity="center_horizontal"
            android:layout_marginLeft="5dp"
            android:textColor="@color/white"
            android:layout_marginRight="20dp"
            android:id="@+id/textView12" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:id="@+id/radioButton4"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/textView12"
            android:layout_toEndOf="@+id/textView12" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@color/white"
            android:id="@+id/radioButton5"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/radioButton4"
            android:layout_toEndOf="@+id/radioButton4"
            android:layout_marginLeft="57dp"
            android:layout_marginStart="57dp" />


    </RelativeLayout>




    <EditText
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="45dp"
        android:textColorHint="@color/white"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Contact No."
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:textColorHint="@color/white"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:inputType="textPersonName"
        android:hint="Username"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:textColorHint="@color/white"
        android:ems="10"
        android:id="@+id/editText7"
        android:layout_weight="0.04" />
    <EditText
        android:layout_width="match_parent"
        android:hint="Password"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText8"
        android:textColorHint="@color/white"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:hint="About Me..."
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:ems="10"
        android:textColorHint="@color/white"
        android:id="@+id/editText12"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Places where I have been to..."
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/white"
        android:layout_height="45dp"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText14"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:hint="Dream Destinations"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:textColorHint="@color/white"
        android:ems="10"
        android:id="@+id/editText15"
        android:layout_weight="0.04" />

    <EditText
        android:layout_width="match_parent"
        android:hint="My Favorite Wise Sayings..."
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:ems="10"
        android:textColorHint="@color/white"
        android:id="@+id/editText16"
        android:layout_weight="0.04" />


    <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="2dp"
            android:text="Submit"
            android:id="@+id/button"
            android:onClick="submitForm"

            android:textColor="#FFFFFF"
            android:textSize="15sp"

            android:background="@drawable/buttonshape"
            android:shadowColor="#fff7faed"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:layout_below="@+id/editText10"
            android:layout_alignLeft="@+id/editText10"/>
</LinearLayout>
