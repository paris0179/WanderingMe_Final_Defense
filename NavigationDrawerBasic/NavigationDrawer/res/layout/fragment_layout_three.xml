<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/blur4"
    android:layout_centerHorizontal="true"
    android:backgroundTint="@color/Crimson">




        <ImageView
            android:id="@+id/imageV6"
            android:src="@drawable/a6"
            android:layout_height="270dp"
            android:layout_width="270dp"
            android:layout_marginBottom="-10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:onClick="openPhoto1" />

        <ImageView
            android:id="@+id/imageV7"
            android:src="@drawable/a5"
            android:layout_height="270dp"
            android:layout_width="270dp"
            android:onClick="openPhoto2"
            android:layout_below="@+id/imageV6"
            android:layout_alignLeft="@+id/imageV6"
            android:layout_alignStart="@+id/imageV6" />

        <ImageView
            android:id="@+id/imageV1"
            android:src="@drawable/a1"
            android:layout_height="270dp"
            android:layout_width="270dp"
            android:onClick="openPhoto3"
            android:layout_below="@+id/imageV7"
            android:layout_alignLeft="@+id/imageV7"
            android:layout_alignStart="@+id/imageV7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Wherever you will go, I will follow..."
        android:textColor="@color/FloralWhite"
        android:id="@+id/textView7"
        android:layout_marginBottom="113dp"
        android:layout_above="@+id/imageV7"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Seeing things in a different perspective."
        android:textColor="@color/FloralWhite"
        android:id="@+id/textView8"
        android:layout_marginTop="69dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Even Beyond the Hills, My Love for you will always be the same.."
        android:textColor="@color/FloralWhite"
        android:id="@+id/textView9"
        android:layout_marginTop="94dp"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/imageV1"
        android:layout_toRightOf="@+id/imageV6"
        android:layout_toEndOf="@+id/imageV6" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/Teal">

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton7"
            android:src="@drawable/camera"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:onClick="open"/>
    </RelativeLayout>



</RelativeLayout>
